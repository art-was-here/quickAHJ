{
  "manifest_version": 3,
  "name": "Quick AHJ Search",
  "version": "1.0",
  "description": "Quickly search Authority Having Jurisdiction (AHJ) information for addresses",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://ahjregistry.myorangebutton.com/*",
    "https://api.mapbox.com/*",
    "https://nominatim.openstreetmap.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick AHJ Search"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 