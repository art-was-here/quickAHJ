{
  "manifest_version": 3,
  "name": "QuickAHJ",
  "version": "1.0",
  "description": "Quickly search Authority Having Jurisdiction (AHJ) information for addresses",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://ahjregistry.myorangebutton.com/*",
    "https://api.mapbox.com/*",
    "https://nominatim.openstreetmap.org/*",
    "https://data.cityofchicago.org/*",
    "https://api.shovels.ai/*",
    "https://up.codes/*",
    "https://solarapp.nrel.gov/*",
    "https://apps-secure.phoenix.gov/*",
    "https://permits.houstontx.gov/*",
    "https://data.houstontx.gov/*",
    "https://www.dallasopendata.com/*",
    "https://data.austintexas.gov/*",
    "https://www.miami.gov/*",
    "https://legacypermits.mlbfl.org/*",
    "https://www.lasvegasnevada.gov/*",
    "https://opendata.cityofhenderson.com/*",
    "https://aca-prod.accela.com/*",
    "https://data.openlaredo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickAHJ"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 